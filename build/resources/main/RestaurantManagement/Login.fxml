<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane id="loginLayout" prefHeight="536.0" prefWidth="357.0" stylesheets="@layoutTheme.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="RestaurantManagement.LoginController">
    <children>
        <ImageView fitHeight="204.0" fitWidth="188.0" layoutX="85.0" layoutY="56.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@std.png" />
            </image>
        </ImageView>
        <Label layoutX="27.0" layoutY="299.0" prefHeight="24.0" prefWidth="94.0" text="Username:" textFill="#f0f0f0">
            <font>
                <Font name="Roboto" size="19.0" />
            </font>
        </Label>
        <TextField fx:id="username" layoutX="147.0" layoutY="298.0" prefHeight="26.0" prefWidth="188.0" promptText="Username" stylesheets="@layoutTheme.css" />
        <Label layoutX="30.0" layoutY="356.0" text="Password:" textFill="WHITE">
            <font>
                <Font name="Roboto" size="18.0" />
            </font>
        </Label>
        <PasswordField fx:id="password" layoutX="145.0" layoutY="354.0" prefHeight="26.0" prefWidth="188.0" promptText="Password" stylesheets="@layoutTheme.css" />
        <Button fx:id="loginBtn" defaultButton="true" layoutX="65.0" onMouseEntered="#entered" onMouseExited="#exited" layoutY="451.0" onAction="#login" prefHeight="35.0" prefWidth="86.0" text="Login">
            <font>
                <Font name="Arial Bold" size="16.0" />
            </font>
        </Button>
        <Button cancelButton="true" layoutX="207.0" onMouseEntered="#entered" onMouseExited="#exited" layoutY="451.0"  onAction="#exit" prefHeight="35.0" prefWidth="85.0" text="Cancel">
            <font>
                <Font name="Arial Bold" size="16.0" />
            </font>
        </Button>
      <Hyperlink fx:id="signup" layoutX="145.0" layoutY="391.0" onAction="#signup" text="Signup" textFill="WHITE" />
    </children>
    <cursor>
        <Cursor fx:constant="OPEN_HAND" />
    </cursor>
</AnchorPane>
